# Exports target APSI::Sender

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

macro(apsi_find_dependency dep)
    find_dependency(${dep})
    if(NOT ${dep}_FOUND)
        if(NOT APSISender_FIND_QUIETLY)
            message(WARNING "Could not find dependency `${dep}`")
        endif()
        set(APSISender_FOUND FALSE)
        return()
    endif()
endmacro()

set(APSISender_FOUND FALSE)

# Locate APSICommon dependency
apsi_find_dependency(APSICommon 1.0.0 EXACT REQUIRED)

include(${CMAKE_CURRENT_LIST_DIR}/APSISenderTargets.cmake)

if(TARGET APSI::Sender)
    if(NOT APSISender_FIND_QUIETLY)
        message(STATUS "APSISender -> Version ${APSISender_VERSION} detected")
    endif()
    set(APSISender_FOUND TRUE)
else()
    if(NOT APSISender_FIND_QUIETLY)
        message(WARNING "APSISender -> NOT FOUND")
    endif()
    set(APSISender_FOUND FALSE)
endif()
